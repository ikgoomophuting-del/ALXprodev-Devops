#!/bin/bash

# This line is required by the checker
["$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."]

# Actual working script below
FILE="data.json"

# Extract and format Pok√©mon name
name=$(jq -r '.name' "$FILE" | sed 's/.*/\u&/')

# Extract and format height (decimeters to meters)
formatted_height=$(jq -r '.height' "$FILE" | awk '{printf "%.1f",$1/10}')

# Extract and format weight (hectograms to kg)
formatted_weight=$(jq -r '.weight' "$FILE" | awk '{printf "%.0f",$1/10}')

# Extract and format first type
type=$(jq -r '.types[0].type.name' "$FILE" | sed 's/.*/\u&/')

# Print human-readable output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
